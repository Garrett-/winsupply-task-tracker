h3
    margin 0 0 3rem 0
    padding 0

span.text-light
    color #666
    font-size 0.8em

span.text-red
    color #f00
    font-size 0.8em
    cursor pointer

table
    border 5px solid #ccc
    border-radius 5px
    width fill

    tr td
        height 5rem
        padding 0 2rem

    tr td:last-child
        text-align right
    tr td:first-child
        text-align left

    tr:nth-child(even) td
        background-color #eee